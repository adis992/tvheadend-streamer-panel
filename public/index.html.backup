    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <h1><i class="fas fa-broadcast-tower"></i> TVHeadend Streamer</h1>
            <p class="mb-0">GPU Accelerated Transcoding Platform</p>
            <div class="gpu-status">
                <div id="nvidia-status" class="gpu-badge gpu-unavailable">
                    <i class="fas fa-microchip"></i> NVIDIA: Checking...
                </div>
                <div id="amd-status" class="gpu-badge gpu-unavailable">
                    <i class="fas fa-microchip"></i> AMD: Checking...
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Controls Panel -->
            <div class="col-lg-4">
                <div class="controls-panel">
                    <h4><i class="fas fa-cog"></i> Kontrole</h4>
                    
                    <div class="mb-3">
                        <button id="refresh-btn" class="btn btn-primary w-100">
                            <i class="fas fa-sync-alt"></i> Osvježi Playlistu
                        </button>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Bulk Controls:</label>
                        <div class="d-grid gap-2">
                            <button id="start-all-btn" class="btn btn-success">
                                <i class="fas fa-play"></i> Pokreni SVE
                            </button>
                            <button id="stop-all-btn" class="btn btn-danger">
                                <i class="fas fa-stop"></i> Zaustavi SVE
                            </button>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Globalni Profil (za bulk operacije):</label>
                        <select id="quality-select" class="form-select" title="Select transcoding quality">
                            <option value="low">Niska (640x480, 500kbps)</option>
                            <option value="medium" selected>Srednja (1280x720, 1.5Mbps)</option>
                            <option value="high">Visoka (1920x1080, 3Mbps)</option>
                            <option value="ultra">Ultra (2560x1440, 6Mbps)</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Globalni GPU (za bulk operacije):</label>
                        <select id="gpu-select" class="form-select" title="Select GPU for transcoding">
                            <option value="auto">Automatski</option>
                            <option value="nvidia">NVIDIA</option>
                            <option value="amd">AMD</option>
                            <option value="cpu">CPU (Backup)</option>
                        </select>
                    </div>
                    
                    <div class="stats-panel">
                        <h5>Statistike</h5>
                        <div class="stat-item">
                            <span class="stat-number" id="total-channels">0</span>
                            <span>Ukupno Kanala</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number" id="active-streams">0</span>
                            <span>Aktivni Stream-ovi</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Channels List -->
            <div class="col-lg-8">
                <div class="channels-container">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4><i class="fas fa-list"></i> Kanali</h4>
                        <div class="input-group" style="width: 300px;">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="search-input" class="form-control" placeholder="Pretraži kanale...">
                        </div>
                    </div>
                    
                    <div id="channels-list">
                        <div class="text-center py-5">
                            <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                            <p class="mt-3">Učitavam kanale...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Progress notifications -->
    <div id="progress-container" class="progress-container"></div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Global variables
        let channels = [];
        let gpuInfo = { nvidia: false, amd: false };
        let activeStreams = new Set();
        let vlcInstalled = false;
        let availableProfiles = {};
        let availableGPUs = {};
        let autoRefreshEnabled = true;
        let autoRefreshInterval = null;
        
        // DOM elements
        const channelsList = document.getElementById('channels-list');
        const refreshBtn = document.getElementById('refresh-btn');
        const searchInput = document.getElementById('search-input');
        const qualitySelect = document.getElementById('quality-select');
        const gpuSelect = document.getElementById('gpu-select');
        const totalChannelsSpan = document.getElementById('total-channels');
        const activeStreamsSpan = document.getElementById('active-streams');
        const progressContainer = document.getElementById('progress-container');
        const nvidiaStatus = document.getElementById('nvidia-status');
        const amdStatus = document.getElementById('amd-status');
        const autoRefreshToggle = document.getElementById('auto-refresh-toggle');
        
        // Socket event listeners
        socket.on('connect', () => {
            console.log('Connected to server');
            fetchGPUInfo();
            checkVLCInstallation();
        });
        
        socket.on('channelsUpdated', (channelsData) => {
            // Only update channels if auto-refresh is enabled
            if (autoRefreshEnabled) {
                channels = channelsData;
                renderChannels();
                updateStats();
            }
        });
        
        socket.on('gpuInfo', (info) => {
            gpuInfo = info;
            updateGPUStatus();
        });
        
        async function checkVLCInstallation() {
            try {
                const response = await fetch('/api/check-vlc');
                const result = await response.json();
                vlcInstalled = result.installed;
            } catch (error) {
                console.error('Error checking VLC installation:', error);
                vlcInstalled = false;
            }
        }
        
        socket.on('streamStarted', (data) => {
            activeStreams.add(data.channelId);
            showNotification(`Stream pokrennut za kanal ID: ${data.channelId}`, 'success');
            updateStats();
        });
        
        socket.on('streamStopped', (data) => {
            activeStreams.delete(data.channelId);
            showNotification(`Stream zaustavljen za kanal ID: ${data.channelId}`, 'info');
            updateStats();
        });
        
        socket.on('transcodingProgress', (data) => {
            updateProgressNotification(data);
        });
        
        socket.on('transcodingError', (data) => {
            showNotification(`Greška u transkodovanju: ${data.error}`, 'error');
        });
        
        // Functions
        async function fetchGPUInfo() {
            try {
                const response = await fetch('/api/gpu-info');
                const info = await response.json();
                gpuInfo = info;
                updateGPUStatus();
            } catch (error) {
                console.error('Error fetching GPU info:', error);
            }
        }
        
        async function fetchProfiles() {
            try {
                const response = await fetch('/api/profiles');
                const data = await response.json();
                availableProfiles = data.profiles;
                availableGPUs = data.availableGPUs;
                console.log('Loaded profiles:', availableProfiles);
                console.log('Available GPUs:', availableGPUs);
                
                // Debug output for troubleshooting
                console.log('Profile keys:', Object.keys(availableProfiles));
                console.log('GPU structure:', availableGPUs);
            } catch (error) {
                console.error('Error fetching profiles:', error);
            }
        }
        
        function updateGPUStatus() {
            nvidiaStatus.className = `gpu-badge ${gpuInfo.nvidia ? 'gpu-available' : 'gpu-unavailable'}`;
            nvidiaStatus.innerHTML = `<i class="fas fa-microchip"></i> NVIDIA: ${gpuInfo.nvidia ? 'Dostupna' : 'Nedostupna'}`;
            
            amdStatus.className = `gpu-badge ${gpuInfo.amd ? 'gpu-available' : 'gpu-unavailable'}`;
            amdStatus.innerHTML = `<i class="fas fa-microchip"></i> AMD: ${gpuInfo.amd ? 'Dostupna' : 'Nedostupna'}`;
        }
        
        function renderChannels(filteredChannels = null) {
            const channelsToRender = filteredChannels || channels;
            
            if (channelsToRender.length === 0) {
                channelsList.innerHTML = `
                    <div class="text-center py-5">
                        <i class="fas fa-tv fa-3x text-muted"></i>
                        <p class="mt-3">Nema dostupnih kanala</p>
                        <button class="btn btn-primary" onclick="refreshPlaylist()">
                            <i class="fas fa-sync-alt"></i> Učitaj Playlistu
                        </button>
                    </div>
                `;
                return;
            }
            
            const html = channelsToRender.map(channel => {
                const statusClass = channel.isActive ? 
                    (channel.transcoding ? 'channel-transcoding' : 'channel-active') : '';
                
                const statusBadge = channel.isActive ? 
                    (channel.transcoding ? 
                        `<span class="status-badge status-transcoding">Transkoduje</span>` :
                        `<span class="status-badge status-active">Aktivan</span>`
                    ) : 
                    `<span class="status-badge status-inactive">Neaktivan</span>`;
                
                const bandwidthInfo = channel.isActive && channel.bandwidth !== undefined ? 
                    `<div class="bandwidth-info">
                        <i class="fas fa-tachometer-alt"></i>
                        ${channel.bandwidth.toFixed(2)} MB/s 
                        <span style="color: #666;">(${(channel.totalData || 0).toFixed(1)} MB)</span>
                    </div>` : '';
                
                const vlcButton = channel.isActive ? 
                    `<button class="btn btn-sm vlc-button ${!vlcInstalled ? 'vlc-not-installed' : ''}" 
                             onclick="launchVLC(${channel.id})" 
                             ${!vlcInstalled ? 'disabled title="VLC nije instaliran"' : 'title="Otvori u VLC"'}>
                        <i class="fas fa-play-circle"></i> VLC
                    </button>` : '';
                
                // Generate profile options
                const profileOptions = Object.keys(availableProfiles).map(profileKey => {
                    const profile = availableProfiles[profileKey];
                    // Handle both old format (direct properties) and new format (profile object)
                    const name = profile.name || profileKey;
                    const width = profile.width;
                    const height = profile.height;
                    const passthrough = profile.passthrough;
                    const description = profile.description;
                    
                    // Special handling for passthrough profile
                    if (passthrough || profileKey === 'passthrough') {
                        return `<option value="${profileKey}" ${(channel.profile || 'passthrough') === profileKey ? 'selected' : ''}>
                            Passthrough (Direktni stream)
                        </option>`;
                    } else {
                        const displayName = name.charAt(0).toUpperCase() + name.slice(1);
                        const resolution = width && height ? `${width}x${height}` : 'Auto';
                        return `<option value="${profileKey}" ${(channel.profile || 'passthrough') === profileKey ? 'selected' : ''}>
                            ${displayName} (${resolution})
                        </option>`;
                    }
                }).join('');
                
                // Generate GPU options - only show available GPUs, no CPU option
                const gpuOptions = [
                    '<option value="auto">Auto</option>',
                    (availableGPUs.nvidia && availableGPUs.nvidia.available) ? '<option value="nvidia">NVIDIA</option>' : '',
                    (availableGPUs.amd && availableGPUs.amd.available) ? '<option value="amd">AMD</option>' : '',
                    (availableGPUs.intel && availableGPUs.intel.available) ? '<option value="intel">Intel</option>' : ''
                ].filter(Boolean).join('');
                
                const profileSelect = `
                    <div class="channel-profile-select mb-2">
                        <label class="form-label-sm">Profil:</label>
                        <select class="form-select form-select-sm" id="profile-${channel.id}" ${channel.isActive ? 'disabled' : ''}>
                            ${profileOptions}
                        </select>
                    </div>
                `;
                
                const gpuSelect = `
                    <div class="channel-gpu-select mb-2">
                        <label class="form-label-sm">GPU:</label>
                        <select class="form-select form-select-sm" id="gpu-${channel.id}" ${channel.isActive ? 'disabled' : ''}>
                            ${gpuOptions}
                        </select>
                    </div>
                `;
                
                return `
                    <div class="card channel-card ${statusClass}">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <img src="${channel.logo || '/placeholder-logo.png'}" 
                                     alt="${channel.name}" 
                                     class="channel-logo"
                                     onerror="this.src='data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNjAiIGhlaWdodD0iNjAiIGZpbGw9IiNjY2MiIHZpZXdCb3g9IjAgMCAyNCAyNCIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBkPSJNMjEgNkg9djEwaDEyVjZtLTItM0g1djEwaDE0VjN6Ii8+PC9zdmc+'">
                                
                                <div class="channel-info">
                                    <div class="channel-name">${channel.name}</div>
                                    <div class="channel-group">
                                        <i class="fas fa-folder"></i> ${channel.group}
                                    </div>
                                    ${bandwidthInfo}
                                    <div class="channel-url">${channel.url}</div>
                                </div>
                                
                                <div class="channel-controls">
                                    ${statusBadge}
                                    
                                    ${!channel.isActive ? `
                                        ${profileSelect}
                                        ${gpuSelect}
                                        <button class="btn btn-success btn-sm" onclick="startStreamWithOptions(${channel.id})">
                                            <i class="fas fa-play"></i> Start
                                        </button>
                                    ` : `
                                        <div class="active-stream-info mb-2">
                                            <small class="text-muted">
                                                Profil: <strong>${channel.profile || 'medium'}</strong><br>
                                                GPU: <strong>${channel.gpu || 'auto'}</strong>
                                            </small>
                                        </div>
                                        <button class="btn btn-danger btn-sm" onclick="stopStream(${channel.id})">
                                            <i class="fas fa-stop"></i> Stop
                                        </button>
                                        <button class="btn btn-info btn-sm" onclick="openStream(${channel.id})">
                                            <i class="fas fa-external-link-alt"></i> Otvori
                                        </button>
                                        ${vlcButton}
                                        ${channel.udpStreaming ? `
                                        <div class="mt-2 udp-info">
                                            <small class="text-muted">
                                                UDP: <strong>${channel.simpleUdpUrl || channel.udpUrl || 'N/A'}</strong>
                                                <button class="btn btn-sm btn-link" onclick="copyUdpUrl('${channel.simpleUdpUrl || channel.udpUrl}')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                                <button class="btn btn-sm btn-link" onclick="openInVlc('${channel.simpleUdpUrl || channel.udpUrl}')">
                                                    <i class="fas fa-play"></i> VLC
                                                </button>
                                            </small>
                                        </div>
                                        <button class="btn btn-danger btn-sm mt-1" onclick="stopUdp(${channel.id})">
                                            <i class="fas fa-stop-circle"></i> Stop UDP
                                        </button>
                                        ` : `
                                        <button class="btn btn-primary btn-sm mt-1" onclick="startUdp(${channel.id})">
                                            <i class="fas fa-broadcast-tower"></i> Start UDP
                                        </button>
                                        `}
                                    `}
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
            
            channelsList.innerHTML = html;
        }
        
        function updateStats() {
            totalChannelsSpan.textContent = channels.length;
            activeStreamsSpan.textContent = channels.filter(c => c.isActive).length;
        }
        
        async function refreshPlaylist() {
            refreshBtn.disabled = true;
            refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Osvježava...';
            
            try {
                const response = await fetch('/api/refresh-playlist', { method: 'POST' });
                const result = await response.json();
                
                if (result.success) {
                    showNotification(`Uspješno učitano ${result.count} kanala`, 'success');
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška: ${error.message}`, 'error');
            } finally {
                refreshBtn.disabled = false;
                refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Osvježi Playlistu';
            }
        }
        
        async function startStream(channelId) {
            const profile = qualitySelect.value;
            const gpu = gpuSelect.value;
            
            try {
                const response = await fetch(`/api/start-stream/${channelId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ profile, gpu })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`Stream pokrennut za kanal ${channelId}`, 'success');
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška pokretanja: ${error.message}`, 'error');
            }
        }
        
        async function startStreamWithOptions(channelId) {
            const profileSelect = document.getElementById(`profile-${channelId}`);
            const gpuSelect = document.getElementById(`gpu-${channelId}`);
            
            const profile = profileSelect ? profileSelect.value : 'medium';
            const gpu = gpuSelect ? gpuSelect.value : 'auto';
            
            try {
                const response = await fetch(`/api/start-stream/${channelId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ profile, gpu })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`Stream pokrennut za kanal ${channelId} (${profile}, ${gpu})`, 'success');
                    
                    // Update channel data to store selected options
                    const channel = channels.find(c => c.id === channelId);
                    if (channel) {
                        channel.profile = profile;
                        channel.gpu = gpu;
                        channel.isActive = true;
                        channel.transcoding = true;
                    }
                    
                    // Re-render to update UI
                    renderChannels();
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška pokretanja: ${error.message}`, 'error');
            }
        }
        
        async function stopStream(channelId) {
            try {
                const response = await fetch(`/api/stop-stream/${channelId}`, { method: 'POST' });
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`Stream zaustavljen za kanal ${channelId}`, 'info');
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška zaustavljanja: ${error.message}`, 'error');
            }
        }
        
        function openStream(channelId) {
            const streamUrl = `/stream/${channelId}/playlist.m3u8`;
            window.open(streamUrl, '_blank');
        }
        
        async function launchVLC(channelId) {
            if (!vlcInstalled) {
                showNotification('VLC nije instaliran. Molimo instalirajte VLC media player.', 'error');
                return;
            }
            
            try {
                const response = await fetch(`/api/launch-vlc/${channelId}`, { method: 'POST' });
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`VLC pokrenut za kanal ${channelId}`, 'success');
                } else {
                    if (result.error === 'VLC not installed') {
                        showNotification('VLC nije instaliran. Instalirajte ga koristeći: sudo apt install vlc', 'error');
                    } else {
                        throw new Error(result.error);
                    }
                }
            } catch (error) {
                showNotification(`Greška pokretanja VLC: ${error.message}`, 'error');
            }
        }
        
        async function startAllStreams() {
            const profile = qualitySelect.value;
            const gpu = gpuSelect.value;
            
            const startAllBtn = document.getElementById('start-all-btn');
            startAllBtn.disabled = true;
            startAllBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Pokretam...';
            
            try {
                const response = await fetch('/api/start-all-streams', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ profile, gpu })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    const successCount = result.results.filter(r => r.success).length;
                    const totalCount = result.results.length;
                    showNotification(`Pokrenuto ${successCount}/${totalCount} stream-ova (${profile}, ${gpu})`, 'success');
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška bulk pokretanja: ${error.message}`, 'error');
            } finally {
                startAllBtn.disabled = false;
                startAllBtn.innerHTML = '<i class="fas fa-play"></i> Pokreni SVE';
            }
        }
        
        async function stopAllStreams() {
            const stopAllBtn = document.getElementById('stop-all-btn');
            stopAllBtn.disabled = true;
            stopAllBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Zaustavljam...';
            
            try {
                const response = await fetch('/api/stop-all-streams', { method: 'POST' });
                const result = await response.json();
                
                if (response.ok) {
                    const successCount = result.results.filter(r => r.success).length;
                    showNotification(`Zaustavljeno ${successCount} stream-ova`, 'info');
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška bulk zaustavljanja: ${error.message}`, 'error');
            } finally {
                stopAllBtn.disabled = false;
                stopAllBtn.innerHTML = '<i class="fas fa-stop"></i> Zaustavi SVE';
            }
        }

        // Search functionality
        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            
            if (searchTerm === '') {
                renderChannels();
            } else {
                const filteredChannels = channels.filter(channel => 
                    channel.name.toLowerCase().includes(searchTerm) ||
                    channel.group.toLowerCase().includes(searchTerm)
                );
                renderChannels(filteredChannels);
            }
        });
        
        // Event listeners
        refreshBtn.addEventListener('click', refreshPlaylist);
        document.getElementById('start-all-btn').addEventListener('click', startAllStreams);
        document.getElementById('stop-all-btn').addEventListener('click', stopAllStreams);
        autoRefreshToggle.addEventListener('change', (e) => {
            autoRefreshEnabled = e.target.checked;
            if (autoRefreshEnabled) {
                showNotification('Auto-osvježavanje uključeno', 'info');
            } else {
                showNotification('Auto-osvježavanje isključeno', 'info');
            }
        });
        
        // Initialize
        Promise.all([
            fetchProfiles(),
            fetchGPUInfo(),
            refreshPlaylist()
        ]).then(() => {
            console.log('Initialization complete');
            startAutoRefresh();
        });
        
        async function startUdp(channelId) {
            const profileSelect = document.getElementById(`profile-${channelId}`);
            const gpuSelect = document.getElementById(`gpu-${channelId}`);
            
            const profile = profileSelect ? profileSelect.value : 'passthrough';
            const gpu = gpuSelect ? gpuSelect.value : 'auto';
            
            try {
                const response = await fetch(`/api/start-udp/${channelId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ profile, gpu })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`UDP stream pokrenut za kanal ${channelId} (${profile}, ${gpu})`, 'success');
                    showNotification(`UDP URL: ${result.simpleUdpUrl || result.udpUrl}`, 'info');
                    
                    // Re-render to update UI
                    renderChannels();
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška pokretanja UDP: ${error.message}`, 'error');
            }
        }
        
        async function stopUdp(channelId) {
            try {
                const response = await fetch(`/api/stop-udp/${channelId}`, {
                    method: 'POST'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showNotification(`UDP stream zaustavljen za kanal ${channelId}`, 'success');
                    
                    // Re-render to update UI
                    renderChannels();
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                showNotification(`Greška zaustavljanja UDP: ${error.message}`, 'error');
            }
        }
        
        function copyUdpUrl(url) {
            if (!url) return;
            
            navigator.clipboard.writeText(url)
                .then(() => {
                    showNotification('UDP URL kopiran u clipboard', 'success');
                })
                .catch(err => {
                    showNotification('Nije moguće kopirati: ' + err, 'error');
                });
        }
        
        function openInVlc(url) {
            if (!url) return;
            
            fetch(`/api/open-vlc?url=${encodeURIComponent(url)}`, {
                method: 'GET'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Stream otvoren u VLC playeru', 'success');
                } else {
                    throw new Error(data.error);
                }
            })
            .catch(error => {
                showNotification(`Greška otvaranja VLC: ${error.message}`, 'error');
            });
        }
        
        function startAutoRefresh() {
            stopAutoRefresh(); // Ensure any existing interval is cleared
            autoRefreshInterval = setInterval(() => {
                console.log('Auto-refreshing channels...');
                refreshPlaylist();
            }, 30000); // Refresh every 30 seconds
            showNotification('Auto-osvježavanje uključeno', 'info');
        }
        
        function stopAutoRefresh() {
            clearInterval(autoRefreshInterval);
            autoRefreshInterval = null;
            showNotification('Auto-osvježavanje isključeno', 'info');
        }
    </script>
    </div> <!-- End main-content -->
</body>
</html>
